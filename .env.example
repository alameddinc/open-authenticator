# JWT Secret for session tokens (change in production)
JWT_SECRET=your-secret-key-change-in-production

# Encryption key for TOTP secrets (must be 32 characters)
ENCRYPTION_KEY=your-encryption-key-change-in-production-32-chars-long

# Admin credentials
ADMIN_PASSWORD=admin

# Viewer credentials (read-only access)
VIEWER_PASSWORD=viewer

# Audit log retention in days (logs older than this will be auto-deleted)
AUDIT_RETENTION_DAYS=30
